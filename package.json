{
  "name": "@squirrelogic/code-index",
  "version": "1.0.0",
  "description": "A TypeScript/Node.js CLI tool for local code indexing and search using SQLite",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "code-index": "./dist/cli/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "cli",
    "code-index",
    "search",
    "sqlite",
    "indexing",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.6.2",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "ignore": "^6.0.2",
    "minimatch": "^10.0.3",
    "simple-git": "^3.28.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.21",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
